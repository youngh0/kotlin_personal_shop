<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Buy">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="선택한 구매 목록"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TableRow
        android:id="@+id/banana"
        android:visibility="gone"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/banana" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="가격 : 1500원"
            android:textSize="20dp" />
    </TableRow>
    <View
        android:visibility="gone"
        android:id="@+id/banana_line"
        android:layout_width="match_parent"
        android:layout_height="1mm"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:background="#F1F1F1" />
    <TableRow
        android:visibility="gone"
        android:id="@+id/apple"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="180dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/apple" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="가격 : 1000원"
            android:textSize="20dp" />
    </TableRow>
    <View
        android:visibility="gone"
        android:id="@+id/apple_line"
        android:layout_width="match_parent"
        android:layout_height="1mm"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:background="#F1F1F1" />
    <TableRow
        android:visibility="gone"
        android:id="@+id/watermelon"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="90dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/watermelon" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="가격 : 3000원"
            android:textSize="20dp" />
    </TableRow>
    <View
        android:visibility="gone"
        android:id="@+id/wm_line"
        android:layout_width="match_parent"
        android:layout_height="1mm"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:background="#F1F1F1" />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:text="가격: "
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"/>

    <EditText
        android:id="@+id/address"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="주소"
        android:inputType="textPostalAddress"/>
    <EditText
        android:id="@+id/phone"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="연락처"
        android:inputType="phone"/>

    <TableRow
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/finally_buy"
            android:layout_width="175dp"
            android:text="구매"/>
        <Button
            android:id="@+id/go_home"
            android:layout_width="175dp"
            android:text="홈으로"/>
    </TableRow>
</TableLayout>