<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Cart">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="장바구니 목록"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/banana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBox_banana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:text="" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="180dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/banana" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="가격 : 1500원 \n원산지 : 인도"
            android:textSize="20dp" />
    </LinearLayout>
    <View
        android:visibility="gone"
        android:id="@+id/banana_line"
        android:layout_width="match_parent"
        android:layout_height="1mm"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:background="#F1F1F1" />
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/apple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBox_apple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:text="" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="180dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/apple" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="가격 : 1000원 \n원산지 : 충주"
            android:textSize="20dp" />
    </LinearLayout>
    <View
        android:visibility="gone"
        android:id="@+id/apple_line"
        android:layout_width="match_parent"
        android:layout_height="1mm"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:background="#F1F1F1" />
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/watermelon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBox_wm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:text="" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/watermelon" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:text="가격 : 3000원 \n원산지 : 성주"
            android:textSize="20dp" />
    </LinearLayout>
    <View
        android:visibility="gone"
        android:id="@+id/wm_line"
        android:layout_width="match_parent"
        android:layout_height="1mm"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:background="#F1F1F1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/cart_to_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="구매"/>
        <Button
            android:id="@+id/cart_to_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="홈으로"/>
        <Button
            android:id="@+id/remove_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="삭제"/>
    </LinearLayout>
</LinearLayout>